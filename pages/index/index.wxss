/* pages/index/index.wxss */
.swiper{
  width: 100%;
  height: 150px;
}
page .swiper  .slide-image {
  width: 100%;
  height: 150px;
}
page .fournav{
  display: flex
}
page .fournav .nav image{
  width: 5rem;
  height: 80px;
}
page .item-one image{
  width: 100%;
}
page .item-two image{
  width: 100%;
  height: 100px;
}
page .timeview  .time{
  display: flex;
  justify-content: flex-start;  
}
page .timeview{
  display: flex;
  justify-content: space-between;
}
page .timeview  .time  text{
  background-color: black;
  color: white;
  border-radius: 5%;
}
page .timernav {
  display: flex;
  overflow-x: scroll;
  /* padding: 10px 20px; */
}
.timernav .item .imageview{
  width: 6rem;
  /* height: 180px; */
  border: solid 1px red;
}
.timernav .item .imageview image{
  width: 6rem;
  height: 130px;
}
.timernav .item .biqiang {
  position: relative;
  background-color: red;
  font-size: 14px;
  border-radius: 15%;
  color: white

}
.timernav .item .imageview .price {
  padding: 0px 10px;
  display: flex;
  justify-content: space-between;
  font-size: 12px;
}
.timernav .item .imageview .short_name{
font-size: 12px;
overflow: hidden;
white-space: nowrap;
text-overflow: ellipsis; 
}
.timernav .item .imageview .price text:first-child{
  font-size: 12px;
  color: red;
}
.timernav .item .imageview .price text:nth-child(2){
font-size: 14px;
color:rgb(179, 177, 177);
 text-decoration: line-through
}
page .turnitem .image_item{
  width: 20rem;
  height: 120px;
}